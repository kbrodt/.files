[settings]
# Ask for confirmation when doing papis add
add-confirm = True

# Edit the info.yaml file before adding a doc into the library
# papis add --edit
add-edit = True

# Open the files before adding a document into the library
# papis add --open
add-open = True

# Fodler and file names
add-folder-name = {doc[year]}-{doc[author_list][0][family]}-{doc[title]}
add-file-name = {doc[year]}-{doc[author_list][0][family]}-{doc[title]}
# notes-name
notes-name = notes.md
ref-format = {doc[author_list][0][family]}{doc[year]}
default-library = papers

[tui]
editmode = nvim

[papers]
dir = ~/papis/papers

[books]
dir = ~/papis/books
